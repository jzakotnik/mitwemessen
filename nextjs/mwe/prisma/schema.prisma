// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
    provider = "sqlite"
    url      = "file:./mwe.db"
}

generator client {
    provider = "prisma-client-js"
}

model User {
    public_id    String        @id
    private_id   String        @unique
    name         String        @default("NoName")
    lunchprofile LunchProfile?
}

model LunchProfile {
    id  String  @id @unique
    mon Boolean @default(true)
    tue Boolean @default(true)
    wed Boolean @default(true)
    thu Boolean @default(true)
    fri Boolean @default(true)

    user User @relation(fields: [id], references: [public_id])

}
